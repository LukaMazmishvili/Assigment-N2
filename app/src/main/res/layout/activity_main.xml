<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/isImageSlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:iss_auto_cycle="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isImageSlider">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:background="@drawable/bg_img"
                android:backgroundTint="#7c4cff"
                app:srcCompat="@drawable/baseline_person_24"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_screens"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                android:background="@drawable/bg_img"
                android:backgroundTint="#4284fe"
                app:srcCompat="@drawable/baseline_person_add_24"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_screens"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="15dp"
                android:background="@drawable/bg_img"
                android:backgroundTint="#0dfecc"
                app:srcCompat="@drawable/baseline_message_24"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Screens"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="15dp"
                android:background="@drawable/bg_img"
                android:backgroundTint="#0dfecc"
                app:srcCompat="@drawable/baseline_dashboard_24"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Screens"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"/>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>